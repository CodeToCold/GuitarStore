@model Guitar[]

@{
    ViewData["Title"] = "Результаты поиска";
}

<h1>Результаты поиска</h1>

@if (Model.Length == 0)
{
    <p>Ничего не найдено. Попробуйте изменить запрос.</p>
}
else
{
    <ul>
    @foreach (var guitar in Model)
        {
            <li><a href="@Url.Action("Index", "Guitar", new { id = guitar.Id })">@guitar.ModelName</a> </li>
        }
    </ul>
}
