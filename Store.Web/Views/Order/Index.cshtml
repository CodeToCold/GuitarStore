@Model OrderModel 

@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>

<table class="table table-sm table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">No</th>
            <th scope="col">Company</th>
            <th scope="col">ModelName</th>
            <th scope="col">Count</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Items.Length; i++ )
        {
            <tr>
                <td class="text-right">@(i + 1)</td>
                <td>@Model.Items[i].Company</td>
                <td>@Model.Items[i].ModelName</td>
                <td class="text-right">@Model.Items[i].Count</td>
                <td class="text-right">@Model.Items[i].Price</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total</td>
            <td class="text-right">@Model.TotalCount</td>
            <td class="text-right">@Model.TotalPrice</td>
        </tr>
    </tfoot>
</table>