@using Store
@model Guitar

@{
    ViewData["Title"] = Model.ModelName;
}

<h1>@Model.ModelName</h1>
<p><strong>@Model.Company</strong></p>
<p>@Model.Description</p>
<p>Price: @Model.Price $</p>
<form action="@Url.Action("Add", "Cart")" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button class="btn btn-outline-success" type="submit">Add to cart</button>
</form>

